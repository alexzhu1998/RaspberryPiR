OBJECTS = $(patsubst %.cpp, %.o, $(wildcard *.cpp)) $(foreach dir,$(SRC_DIR),$(patsubst $(dir)/%.cpp, $(dir)/%.o, $(wildcard $(dir)/*.cpp)))

